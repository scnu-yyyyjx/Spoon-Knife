/* pages/discuss/discuss.wxss */

.searchBar{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 3;
}

.discussPic1 {
  display: flex;
}

.discussPic1 image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 45%;
}

.discussPic2 image{
  width: 60rpx;
  height:  60rpx;
  margin-left: 200rpx;
  margin-top:40rpx;
}


.postType{
  display: flex;
  align-content: center;
  justify-content: center;
}

.buttonPic1{
  position: absolute;
  right: 100rpx;
}

.buttonPic2{
  position: absolute;
  left: 100rpx;
}

.buttonPic1 image{
  margin-top: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

.buttonPic2 image{
  margin-top: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

.postPart{
  background-color: white;
  margin: 20px 20px;
  border: 4rpx solid rgb(86, 92, 94);
  border-radius: 20rpx;
}

.userInfo{
  border: 4rpx solid #e2e2e2af;
  border-radius: 15rpx;
  display: flex;
  height: 110rpx;
  margin: 5rpx 15rpx 30rpx 15rpx ;
}

.nickName{
  font-size: 35rpx;
  font-weight: 400;
  margin-top: 20rpx;
  width: 500rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}


.title{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 45rpx;
  font-weight: 600;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.title image{
  width: 30rpx;
  height: 30rpx;
}

.userHead{
  margin: 10rpx 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.userHead image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 8rpx solid rgb(134, 216, 241);
}
