.content {
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 2rpx solid rgba(169, 169, 169, 0.527);
  /* display: flex; */
  flex-wrap: wrap;
}

.contentText {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  flex-wrap: wrap;
  text-overflow: ellipsis;
}

.contentFont {
  font-size: 30rpx;
  word-break: break-all;
  flex-wrap: wrap;
}

