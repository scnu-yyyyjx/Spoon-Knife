.content{
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 6rpx solid rgb(86, 92, 94);
  /* display: flex; */
  flex-wrap: wrap;
}

.contentText {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  flex-wrap: wrap;
  text-overflow: ellipsis;
  }

.state{
  margin-left: 20rpx;
  height: 50rpx;
  font-size: 25rpx;
  display: flex;
}



.tag{
  width: 280rpx;
}


.like{
  margin-left: 30rpx;
}

.state image{
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.tip{
  margin: 0 200rpx;
  border: 2rpx solid rgb(230, 173, 50);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 30rpx;
}

.tip image{
  width: 40rpx;
  height: 40rpx;
}
