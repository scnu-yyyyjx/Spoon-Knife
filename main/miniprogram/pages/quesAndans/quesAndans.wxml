<view>
  <!--这堆内容全部点击后展开点别的地方收起来qwq-->
  <!--<searchBar></searchBar>我不会用searchBar这个东西qwq-->
  <view>(不输入内容的栏目代表该条件为任意)</view>
  <button bindtap="search">点我搜索</button>
  <checkbox-group bindchange="switchIR">
    <checkbox value="replyS" checked="{{replyS}}">包含回帖</checkbox>
  </checkbox-group>
  <checkbox-group bindchange="switchDI">
    <checkbox value="dist" checked="{{distinctS}}">区分标题和正文</checkbox>
  </checkbox-group>
  <view wx:if="{{distinctS}}">
    <text>搜索标题文字：</text>
    <input type="text" placeholder="任意标题" bindinput="inputTitle" value="{{titleS}}" />
    <text>搜索正文文字：</text>
    <input type="text" placeholder="任意正文" bindinput="inputContent" value="{{contentS}}" />
  </view>
  <view wx:else>
    <text>搜索文字：</text>
    <input type="text" placeholder="任意文字" bindinput="inputText" value="{{textS}}" />
  </view>
  <view wx:if="{{0}}">
    <text>帖子类型选择：</text>
    <checkbox-group bindchange="switchType">
      <view wx:for="{{types}}">
        <view wx:if="{{index}}">
          <checkbox value="{{item}}" checked="{{typesS[index]}}">{{item}}</checkbox>
        </view>
      </view>
    </checkbox-group>
  </view>
  <view>
    <text>搜索发帖者用户名：</text>
    <input type="text" placeholder="任意发帖者" bindinput="inputUser" value="{{userS}}" />
  </view>
  <checkbox-group bindchange="switchAN">
    <checkbox value="anonymityS" checked="{{anonymityS}}">包含匿名用户</checkbox>
  </checkbox-group>
  <view>开始时间：</view>
  <picker mode="date" value="{{dateBS}}" start="BGD" end="" bindchange="switchBS">
    <input type="text" value="{{dateBS}}" disabled="true" />
  </picker>
  <view>结束时间：</view>
  <picker mode="date" value="{{dateES}}" start="EGD" end="" bindchange="switchES">
    <input type="text" value="{{dateES}}" disabled="true" />
  </picker>
  <text>标签选择:(未选代表任意)</text>
  <!--这个要改成下拉框-->
  <checkbox-group bindchange="selectTag">
    <view wx:for="{{tags}}">
      <checkbox value="{{item[1]}}" checked="{{tagsS[index]}}" id="{{index}}">{{item[1]}}</checkbox>
    </view>
  </checkbox-group>
</view>

<view class="selectState">
  <van-dropdown-menu active-color="#1296db">
    <van-dropdown-item title="{{'帖子类型：'+types[type]}}" wx:if="{{!pageType}}">
      <view>
        <view wx:for="{{types}}" class="postType">
          <view>
            <button bindtap="selectType" id="{{index+0}}">{{item}}</button>
          </view>
          <view class="buttonPic1" hidden="{{!(index==type)}}">
            <image src="/img/leftsjx.png"></image>
          </view>
        </view>
      </view>
    </van-dropdown-item>
    <van-dropdown-item title="{{'排序方式：'+('desc'==order?'最新在前':'最新在后')}}">
      <view class="timeSelect">
        <view class="item1">
          <view class="buttonPic2" hidden="{{!('desc'==order)}}">
            <image src="/img/rightsjx.png"></image>
          </view>
          <view>
            <button bindtap="selectST" id="desc">最新在前</button>
          </view>

        </view>
        <view class="item2">
          <view class="buttonPic2" hidden="{{!('asc'==order)}}">
            <image src="/img/rightsjx.png"></image>
          </view>
          <view>
            <button bindtap="selectST" id="asc">最新在后</button>
          </view>

        </view>
      </view>
    </van-dropdown-item>
  </van-dropdown-menu>
</view>

<view wx:if="{{!postn}}">暂无帖子(点击发布第一个帖子?)</view>
<view wx:else>
  <view wx:for="{{posts}}" wx:for-index="i" wx:for-item="v">
    <view class="postPart" bindtap="gotoPost" id="{{v[0].id}}">
      <view class="title">
        <image src="/img/title.png"></image>
        {{v[0].title}}
      </view>
      <view class="userInfo">
        <view class="userHead">
          <image src="{{pathp+'default.jpg'}}" wx:if="{{v[0].anonymity&&me!=v[0].user}}"></image>
          <image src="{{pathp+v[1].image}}" wx:else></image>
        </view>
        <view class="nickName" wx:if="{{v[0].anonymity&&me!=v[0].user}}">匿名用户</view>
        <view class="nickName" wx:else>{{v[1].nickName}}</view>
      </view>
      <view class="content">
        <view wx:for="{{v[3]}}">
          <view>{{item}}</view>
        </view>
      </view>
      <view class="state">
        <view class="tag">
          <image src="/img/tag.png"></image>
          <text>{{v[0].tag}}</text>
        </view>
        <view class="activity">
          <image src="/img/activity.png"></image>
          <text>{{v[2][0]}}/{{v[2][1]}}/{{v[2][2]}} {{v[2][3]}}:{{v[2][4]}}:{{v[2][5]}}</text>
        </view>
        <view class="like">
          <image src="/img/like!.png"></image><text>{{v[0].thumbs}}</text>
        </view>
        <view style="height:40rpx"></view>
      </view>
    </view>
  </view>
</view>
<view wx:if="{{alreadyAll||postn<=initLoads}}" class="tip">
  <image src="/img/tip.png"></image>
  <view>已经到达底端啦！</view>
</view>