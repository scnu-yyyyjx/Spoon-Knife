/* pages/discuss/discuss.wxss */
.discussPic1 {
  display: flex;
}

.discussPic1 image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 45%;
}

.discussPic2 image{
  width: 60rpx;
  height:  60rpx;
  margin-left: 200rpx;
  margin-top:40rpx;
}

.postPart{
  background-color: white;
  margin: 20px 20px;
  border: 4rpx solid rgb(86, 92, 94);
  border-radius: 20rpx;
}

.userInfo{
  display: flex;
}

.nickName{
  font-size: 35rpx;
  margin-top: 20rpx;
  width: 500rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}


.title{
  margin: 20rpx 20rpx;
  font-size: 40rpx;
  width: 600rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.title image{
  width: 30rpx;
  height: 30rpx;
}

.userHead{
  margin: 20rpx 20rpx;
  width: 110rpx;
  height: 110rpx;
}

.userHead image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 8rpx solid rgb(134, 216, 241);
}

.content{
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 6rpx solid rgb(86, 92, 94);

}

.contentText {
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  }

.state{
  margin-left: 20rpx;
  height: 50rpx;
  font-size: 25rpx;
  display: flex;
}

.tag{
  width: 280rpx;
}


.like{
  margin-left: 30rpx;
}

.state image{
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.tip{
  margin: 0 200rpx;
  border: 2rpx solid rgb(230, 173, 50);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
}

.tip image{
  width: 40rpx;
  height: 40rpx;
}
