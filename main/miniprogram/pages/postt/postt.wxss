/* miniprogram/pages/postt/postt.wxss */
.postInfo{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.postTitle{
  font-size:60rpx;
  font-weight: 800;
  display: flex;
  flex-wrap: wrap;
  align-items:center;
}

.tag image{
  width: 30rpx;
  height: 30rpx;
}

.tag{
  margin-left: 100rpx;
  font-size: 30rpx;
  font-weight:400;
  color: rgb(255, 160, 17);
  position: absolute;
  left: 550rpx;
}



.user{
  margin-top: 20rpx;
  display: flex;
}

.userName{
  margin-left: 20rpx;
  font-weight:600;
  display: flex;
  align-items:center;
  justify-content:center;
  font-size: 40rpx;
}

.userHead image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: 8rpx solid rgb(134, 216, 241);
}

.postContent{
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}


.postState{
  /* margin: 20rpx; */
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items:center;
  justify-content: space-evenly;
  border-bottom: 2rpx solid rgb(194, 188, 188);
  border-top:  2rpx solid rgb(194, 188, 188);
 height: 70rpx;
 font-size: 30rpx;
 font-weight: 200;
 color: darkgray;
}

.postState image{
  width: 40rpx;
  height: 40rpx;
}

.replyButton{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  /* background-color: rgb(128, 255, 185);
  background-color: rgb(101, 219, 248);  */
}

.section{
  margin: 50rpx 30rpx 20rpx 30rpx;
  background-color: rgba(243, 243, 243, 0.479);
  border-radius: 30rpx;
}

.activity{
  display: flex;
  align-items:center;
}

.collect{
  display: flex;
  align-items:center;
}

.like{
  display: flex;
  align-items:center;
}

.like text{
  margin-left: 5rpx;
}

.share{
  display: flex;
  align-items:center;
}

.delete{
  display: flex;
  align-items:center;
}

.reuserInfo{
  margin-left: 20rpx;
  display: flex;
  align-items:center;
}

.reuserName{
  margin-left: 10rpx;
  width: 150rpx;
  font-size: 30rpx;
  font-weight: 200;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex-wrap: wrap;
  text-overflow: ellipsis;
}

.bereuserName{
  margin-left: 10rpx;
  width: 150rpx;
  font-size: 30rpx;
  font-weight: 200;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex-wrap: wrap;
  text-overflow: ellipsis;
}

.reuserInfo image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.doubleToright image{
  margin-left: 50rpx;
  margin-right: 50rpx;
  height: 50rpx;
  width: 50rpx;
  border-radius: 0;
}

.reContent{
  margin-left: 100rpx;
  margin-right: 40rpx;
}

.restate{
  margin-left: 100rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  color: darkgrey;
  border-bottom: 2rpx solid rgb(209, 209, 209);
}

.restate image{
  width: 30rpx;
  height: 30rpx;
}

.floor{
  margin-left:80rpx;
  font-size: 30rpx;
  color: darkgray;
  flex-direction: row-reverse;
  position: absolute;
  left: 550rpx;
}

.floor image{
  width: 30rpx;
  height: 30rpx;
}

.time image{
