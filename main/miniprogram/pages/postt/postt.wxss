  border-bottom: 2rpx solid rgb(194, 188, 188);
  border-top:  2rpx solid rgb(194, 188, 188);
 height: 70rpx;
}

.postState image{
  width: 50rpx;
  height: 50rpx;
}

.replyButton{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  /* background-color: rgb(128, 255, 185);
  background-color: rgb(101, 219, 248);  */
